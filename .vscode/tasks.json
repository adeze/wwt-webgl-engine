{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All Packages",
      "type": "shell",
      "command": "yarn build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Clean All Packages",
      "type": "shell",
      "command": "yarn clean",
      "problemMatcher": []
    },
    {
      "label": "Lint All Packages",
      "type": "shell",
      "command": "yarn lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test All Packages",
      "type": "shell",
      "command": "yarn test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Generate Documentation",
      "type": "shell",
      "command": "yarn doc",
      "problemMatcher": []
    },
    {
      "label": "Serve Embed App",
      "type": "shell",
      "command": "yarn run serve-embed",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting development server",
          "endsPattern": "(Compiled successfully|Failed to compile)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "Serve Research App",
      "type": "shell",
      "command": "yarn run serve-research",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting development server",
          "endsPattern": "(Compiled successfully|Failed to compile)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "Serve Embed Creator",
      "type": "shell",
      "command": "yarn run serve-creator",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting development server",
          "endsPattern": "(Compiled successfully|Failed to compile)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "Build Engine Package",
      "type": "shell",
      "command": "yarn build",
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Engine (Dev Mode)",
      "type": "shell",
      "command": "yarn build-dev",
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Engine (Prod Mode)",
      "type": "shell",
      "command": "yarn build-prod",
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Lint Engine Package",
      "type": "shell",
      "command": "yarn lint",
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Build Research App",
      "type": "shell",
      "command": "yarn build",
      "options": {
        "cwd": "${workspaceFolder}/research-app"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Embed App",
      "type": "shell",
      "command": "yarn build",
      "options": {
        "cwd": "${workspaceFolder}/embed"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Embed Creator",
      "type": "shell",
      "command": "yarn build",
      "options": {
        "cwd": "${workspaceFolder}/embed-creator"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Run Integration Tests (Local)",
      "type": "shell",
      "command": "yarn build && yarn local",
      "options": {
        "cwd": "${workspaceFolder}/tests"
      },
      "group": "test",
      "problemMatcher": [],
      "dependsOn": ["Serve Research App"]
    },
    {
      "label": "Setup Workspace",
      "type": "shell",
      "command": "git submodule update --init && yarn install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
